        async function loadClients(page = 1) {
            try {
                const response = await fetch(`/admin/clients?page=${page}`);
                const data = await response.json();
                
                if (data.success) {
                    const table = document.getElementById('clientsTable');
                    
                    if (data.clients.length === 0) {
                        table.innerHTML = '<p>No clients found.</p>';
                        return;
                    }

                    let html = `
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Business</th>
                                    <th>Phone</th>
                                    <th>Paid</th>
                                    <th>Subscription</th>
                                    <th>Activated</th>
                                    <th>Feedback</th>
                                    <th>Joined</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                    `;

                    data.clients.forEach(client => {
                        const isActive = client.subscriptionActive && 
                                       new Date(client.subscriptionEndDate) > new Date();
                        const endDate = client.subscriptionEndDate ? 
                                       new Date(client.subscriptionEndDate).toLocaleDateString('en-IN') : 'N/A';
                        const isPaid = client.paymentCompleted || false;
                        const isActivated = client.accountActivated || false;
                        
                        // Feedback stats
                        const feedback = client.feedback || { veryUseful: 0, goodIdea: 0, notUseful: 0, total: 0 };
                        const feedbackText = feedback.total > 0 
                            ? `VU: ${feedback.veryUseful}, GI: ${feedback.goodIdea}, NU: ${feedback.notUseful}`
                            : 'No feedback';
                        
                        html += `
                            <tr>
                                <td>${client.name || 'N/A'}</td>
                                <td>${client.email}</td>
                                <td>${client.businessName || 'N/A'}</td>
                                <td>${client.phoneNumber || 'N/A'}</td>
                                <td>
                                    <span class="badge ${isPaid ? 'badge-active' : 'badge-inactive'}">
                                        ${isPaid ? 'Paid' : 'Not Paid'}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge ${isActive ? 'badge-active' : 'badge-inactive'}">
                                        ${isActive ? `Active (${endDate})` : 'Inactive'}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge ${isActivated ? 'badge-active' : 'badge-inactive'}">
                                        ${isActivated ? 'Yes' : 'No'}
                                    </span>
                                </td>
                                <td style="font-size: 11px; color: #aaa;">
                                    ${feedbackText}
                                </td>
                                <td>${new Date(client.createdAt).toLocaleDateString('en-IN')}</td>
                                <td>
                                    <button onclick="viewClient('${client._id}')" style="padding: 6px 12px; background: #4285F4; color: white; border: none; border-radius: 4px; cursor: pointer;">View</button>
                                </td>
                            </tr>
                        `;
                    });

                    html += `
                            </tbody>
                        </table>
                    `;

                    // Pagination
                    if (data.pagination.pages > 1) {
                        html += `
                            <div class="pagination">
                                <button onclick="loadClients(${data.pagination.page - 1})" 
                                        ${data.pagination.page === 1 ? 'disabled' : ''}>Previous</button>
                                <span style="padding: 8px 16px;">Page ${data.pagination.page} of ${data.pagination.pages}</span>
                                <button onclick="loadClients(${data.pagination.page + 1})" 
                                        ${data.pagination.page === data.pagination.pages ? 'disabled' : ''}>Next</button>
                            </div>
                        `;
                    }

                    table.innerHTML = html;
                    currentPage = page;
                }
            } catch (error) {
                console.error('Error loading clients:', error);
                document.getElementById('clientsTable').innerHTML = '<p>Error loading clients.</p>';
            }
        }

        function viewClient(id) {
            window.location.href = `/admin/clients/${id}`;
        }

        // Load data on page load
        loadStats();
        // loadSettings(); // HIDDEN FOR NOW - Website Statistics feature
        loadClients(1);

        // Refresh stats every 30 seconds
        setInterval(loadStats, 30000);
    </script>

