    <!-- Feedback Modal -->
    <div class="feedback-modal" id="feedbackModal">
        <div class="feedback-modal-content" style="position: relative;">
            <span class="feedback-close" onclick="closeFeedbackModal()">&times;</span>
            <h2 class="feedback-modal-title">Rate Your Experience</h2>
            <p class="feedback-modal-subtitle">How useful was this QR code page?</p>
            <p class="feedback-swipe-hint" style="color: #666; font-size: 12px; margin-top: -10px; margin-bottom: 15px; display: none;">Swipe down to close</p>
            <div class="feedback-stars" id="feedbackStars">
