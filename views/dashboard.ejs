<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Dynamic QR Generator</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #0a0a0a;
            color: #ffffff;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .header h1 {
            font-size: 28px;
        }

        .logout-btn {
            background: #ff4444;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s;
        }

        .logout-btn:hover {
            background: #cc0000;
        }

        .section {
            background: #1a1a1a;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
        }

        .section-title {
            font-size: 20px;
            margin-bottom: 20px;
            color: #ffffff;
        }

        .profile-form {
            display: grid;
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        label {
            color: #ccc;
            font-size: 14px;
        }

        input[type="text"],
        input[type="file"] {
            padding: 12px;
            border: 1px solid #333;
            border-radius: 8px;
            background: #0a0a0a;
            color: #fff;
            font-size: 14px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary {
            background: #4285F4;
            color: white;
        }

        .btn-primary:hover {
            background: #3367d6;
        }

        .btn-success {
            background: #25D366;
            color: white;
        }

        .btn-success:hover {
            background: #1da851;
        }

        .btn-danger {
            background: #ff4444;
            color: white;
        }

        .btn-danger:hover {
            background: #cc0000;
        }

        .payment-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            text-align: center;
            padding: 30px;
        }

        .payment-section h2 {
            margin-bottom: 15px;
        }

        .payment-section p {
            margin-bottom: 20px;
            color: #ddd;
        }

        .links-list {
            display: grid;
            gap: 15px;
        }

        .link-item {
            background: #0a0a0a;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .link-info {
            flex: 1;
            min-width: 200px;
        }

        .link-info strong {
            display: block;
            margin-bottom: 5px;
            color: #fff;
        }

        .link-info span {
            color: #888;
            font-size: 12px;
            word-break: break-all;
        }

        .link-actions {
            display: flex;
            gap: 10px;
        }

        .btn-small {
            padding: 8px 16px;
            font-size: 12px;
        }

        .add-link-form {
            background: #0a0a0a;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            display: none;
        }

        .add-link-form.active {
            display: block;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 15px;
        }

        .category-selector {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 10px;
            margin: 15px 0;
        }

        .category-option {
            padding: 10px;
            border: 2px solid #333;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .category-option:hover {
            border-color: #4285F4;
        }

        .category-option.selected {
            border-color: #4285F4;
            background: #4285F4;
        }

        .category-option i {
            font-size: 24px;
            display: block;
            margin-bottom: 5px;
        }

        .qr-section {
            text-align: center;
            padding: 30px;
        }

        .qr-code {
            max-width: 300px;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 12px;
        }

        .qr-code img {
            width: 100%;
            height: auto;
        }

        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-paid {
            background: #25D366;
            color: white;
        }

        .status-pending {
            background: #ff9800;
            color: white;
        }

        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .alert-success {
            background: #25D366;
            color: white;
        }

        .alert-error {
            background: #ff4444;
            color: white;
        }

        .alert-info {
            background: #4285F4;
            color: white;
        }

        @media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .link-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .link-actions {
                width: 100%;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Dashboard</h1>
            <a href="/auth/logout" class="logout-btn">Logout</a>
        </div>

        <div id="alert-container"></div>

        <!-- Profile Section -->
        <div class="section">
            <h2 class="section-title">Business Profile</h2>
            <form class="profile-form" id="profileForm">
                <div class="form-group">
                    <label>Business Name</label>
                    <input type="text" name="businessName" value="<%= user.businessName || '' %>" placeholder="Enter business name">
                </div>
                <div class="form-group">
                    <label>Business Logo (Optional)</label>
                    <input type="file" name="logo" accept="image/*">
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>
        </div>

        <!-- Payment Section -->
        <div class="section payment-section">
            <h2>Payment Status</h2>
            <% if (user.paymentCompleted) { %>
                <p><span class="status-badge status-paid">✓ Payment Completed</span></p>
                <p style="margin-top: 15px;">Your QR code is active and ready to share!</p>
            <% } else { %>
                <p><span class="status-badge status-pending">Payment Pending</span></p>
                <p>Complete payment to activate your QR code</p>
                <button class="btn btn-success" onclick="initiatePayment()" style="margin-top: 15px;">Pay ₹100</button>
            <% } %>
        </div>

        <!-- QR Code Section -->
        <% if (user.paymentCompleted) { %>
        <div class="section qr-section">
            <h2 class="section-title">Your QR Code</h2>
            <div id="qr-container">
                <button class="btn btn-primary" onclick="generateQR()">Generate QR Code</button>
            </div>
            <p style="margin-top: 15px; color: #888;">
                Your page URL: <a href="/p/<%= user.uniqueSlug %>" target="_blank" style="color: #4285F4;">/p/<%= user.uniqueSlug %></a>
            </p>
        </div>
        <% } %>

        <!-- Links Section -->
        <div class="section">
            <h2 class="section-title">Your Links</h2>
            <button class="btn btn-primary" onclick="toggleAddLinkForm()">+ Add New Link</button>
            
            <div class="add-link-form" id="addLinkForm">
                <h3 style="margin-bottom: 15px;">Add/Edit Link</h3>
                <form id="linkForm">
                    <input type="hidden" id="linkId" name="linkId">
                    
                    <div class="form-group">
                        <label>Select Category</label>
                        <div class="category-selector" id="categorySelector">
                            <% Object.keys(defaultCategories).forEach(cat => { %>
                                <div class="category-option" data-category="<%= cat %>" data-type="default">
                                    <i class="<%= defaultCategories[cat].icon %>"></i>
                                    <span><%= defaultCategories[cat].name %></span>
                                </div>
                            <% }); %>
                            <div class="category-option" data-category="custom" data-type="custom">
                                <i class="fas fa-plus"></i>
                                <span>Custom</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label>Display Name</label>
                            <input type="text" id="displayName" name="displayName" required placeholder="e.g., My Instagram">
                        </div>
                        <div class="form-group">
                            <label>URL</label>
                            <input type="url" id="url" name="url" required placeholder="https://...">
                        </div>
                    </div>

                    <div class="form-group" id="customIconGroup" style="display: none;">
                        <label>Upload Custom Icon</label>
                        <input type="file" id="customIcon" name="customIcon" accept="image/*">
                    </div>

                    <div style="display: flex; gap: 10px; margin-top: 15px;">
                        <button type="submit" class="btn btn-primary">Save Link</button>
                        <button type="button" class="btn btn-danger" onclick="cancelAddLink()">Cancel</button>
                    </div>
                </form>
            </div>

            <div class="links-list" id="linksList">
                <% if (links && links.length > 0) { %>
                    <% links.forEach(link => { %>
                        <div class="link-item" data-link-id="<%= link._id %>">
                            <div class="link-info">
                                <strong>
                                    <% if (link.categoryType === 'custom' && (link.icon.startsWith('data:image') || link.icon.startsWith('/'))) { %>
                                        <img src="<%= link.icon %>" style="width: 20px; height: 20px; vertical-align: middle; margin-right: 5px;">
                                    <% } else { %>
                                        <i class="<%= link.icon %>"></i>
                                    <% } %>
                                    <%= link.displayName %>
                                </strong>
                                <span><%= link.url %></span>
                            </div>
                            <div class="link-actions">
                                <button class="btn btn-primary btn-small" onclick="editLink('<%= link._id %>', '<%= link.category %>', '<%= link.categoryType %>', '<%= link.url %>', '<%= link.displayName %>')">Edit</button>
                                <button class="btn btn-danger btn-small" onclick="deleteLink('<%= link._id %>')">Delete</button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p style="color: #888; text-align: center; padding: 20px;">No links added yet. Click "Add New Link" to get started.</p>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        let selectedCategory = null;
        let selectedCategoryType = null;

        // Category selection
        document.querySelectorAll('.category-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.category-option').forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                selectedCategory = this.dataset.category;
                selectedCategoryType = this.dataset.type;
                
                const customIconGroup = document.getElementById('customIconGroup');
                if (selectedCategoryType === 'custom') {
                    customIconGroup.style.display = 'block';
                    document.getElementById('customIcon').required = true;
                } else {
                    customIconGroup.style.display = 'none';
                    document.getElementById('customIcon').required = false;
                }
            });
        });

        // Profile form
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            
            try {
                const response = await fetch('/dashboard/update-profile', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                if (data.success) {
                    showAlert('Profile updated successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert(data.message || 'Error updating profile', 'error');
                }
            } catch (error) {
                showAlert('Error updating profile', 'error');
            }
        });

        // Link form
        document.getElementById('linkForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!selectedCategory) {
                showAlert('Please select a category', 'error');
                return;
            }

            const formData = new FormData();
            formData.append('category', selectedCategory);
            formData.append('categoryType', selectedCategoryType);
            formData.append('url', document.getElementById('url').value);
            formData.append('displayName', document.getElementById('displayName').value);
            
            const linkId = document.getElementById('linkId').value;
            if (linkId) formData.append('linkId', linkId);
            
            if (selectedCategoryType === 'custom') {
                const fileInput = document.getElementById('customIcon');
                if (fileInput.files[0]) {
                    formData.append('customIcon', fileInput.files[0]);
                }
            } else {
                // For default categories, we'll set the icon on the server
            }

            try {
                const response = await fetch('/dashboard/link', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                if (data.success) {
                    showAlert('Link saved successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert(data.message || 'Error saving link', 'error');
                }
            } catch (error) {
                showAlert('Error saving link', 'error');
            }
        });

        function toggleAddLinkForm() {
            const form = document.getElementById('addLinkForm');
            form.classList.toggle('active');
            if (form.classList.contains('active')) {
                resetLinkForm();
            }
        }

        function cancelAddLink() {
            document.getElementById('addLinkForm').classList.remove('active');
            resetLinkForm();
        }

        function resetLinkForm() {
            document.getElementById('linkForm').reset();
            document.getElementById('linkId').value = '';
            selectedCategory = null;
            selectedCategoryType = null;
            document.querySelectorAll('.category-option').forEach(opt => opt.classList.remove('selected'));
            document.getElementById('customIconGroup').style.display = 'none';
        }

        function editLink(id, category, type, url, displayName) {
            toggleAddLinkForm();
            document.getElementById('linkId').value = id;
            document.getElementById('url').value = url;
            document.getElementById('displayName').value = displayName;
            
            // Select the category
            const categoryOption = document.querySelector(`[data-category="${category}"][data-type="${type}"]`);
            if (categoryOption) {
                categoryOption.click();
            }
        }

        async function deleteLink(id) {
            if (!confirm('Are you sure you want to delete this link?')) return;
            
            try {
                const response = await fetch(`/dashboard/link/${id}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                if (data.success) {
                    showAlert('Link deleted successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert(data.message || 'Error deleting link', 'error');
                }
            } catch (error) {
                showAlert('Error deleting link', 'error');
            }
        }

        async function initiatePayment() {
            try {
                const response = await fetch('/payment/create-order', {
                    method: 'POST'
                });
                
                const data = await response.json();
                if (!data.success) {
                    showAlert('Error creating payment order', 'error');
                    return;
                }

                const options = {
                    key: data.key,
                    amount: data.amount,
                    currency: data.currency,
                    name: 'Dynamic QR Generator',
                    description: 'QR Code Activation',
                    order_id: data.orderId,
                    handler: async function(response) {
                        // Verify payment
                        const verifyResponse = await fetch('/payment/verify', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                razorpay_order_id: response.razorpay_order_id,
                                razorpay_payment_id: response.razorpay_payment_id,
                                razorpay_signature: response.razorpay_signature
                            })
                        });
                        
                        const verifyData = await verifyResponse.json();
                        if (verifyData.success) {
                            showAlert('Payment successful! Your QR code is now active.', 'success');
                            setTimeout(() => location.reload(), 2000);
                        } else {
                            showAlert('Payment verification failed', 'error');
                        }
                    },
                    prefill: {
                        email: '<%= user.email %>',
                        name: '<%= user.name %>'
                    },
                    theme: {
                        color: '#4285F4'
                    }
                };

                const rzp = new Razorpay(options);
                rzp.open();
            } catch (error) {
                console.error('Payment error:', error);
                showAlert('Error initiating payment', 'error');
            }
        }

        async function generateQR() {
            try {
                const response = await fetch('/qr/generate');
                const data = await response.json();
                
                if (data.success) {
                    const qrContainer = document.getElementById('qr-container');
                    qrContainer.innerHTML = `
                        <div class="qr-code">
                            <img src="${data.qrUrl}" alt="QR Code">
                        </div>
                        <a href="${data.qrUrl}" download class="btn btn-primary" style="margin-top: 15px;">Download QR Code</a>
                    `;
                    showAlert('QR code generated successfully!', 'success');
                } else {
                    showAlert(data.message || 'Error generating QR code', 'error');
                }
            } catch (error) {
                showAlert('Error generating QR code', 'error');
            }
        }

        function showAlert(message, type) {
            const container = document.getElementById('alert-container');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            container.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }

        // Load existing QR if payment completed
        <% if (user.paymentCompleted) { %>
        window.addEventListener('DOMContentLoaded', () => {
            generateQR();
        });
        <% } %>
    </script>
</body>
</html>

