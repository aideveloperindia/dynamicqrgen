<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Details - Admin Dashboard</title>
    <link rel="icon" type="image/png" href="/images/qrconnect logo.png">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #0a0a0a;
            color: #ffffff;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .header h1 {
            font-size: 28px;
        }

        .back-btn, .logout-btn {
            background: #4285F4;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
        }

        .logout-btn {
            background: #ff4444;
        }

        .card {
            background: #1a1a1a;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
        }

        .card-title {
            font-size: 20px;
            margin-bottom: 20px;
            color: #4CAF50;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .info-item {
            padding: 15px;
            background: #0a0a0a;
            border-radius: 8px;
        }

        .info-label {
            color: #888;
            font-size: 12px;
            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .info-value {
            color: #fff;
            font-size: 16px;
            word-break: break-word;
        }

        .badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .badge-active {
            background: #4CAF50;
            color: white;
        }

        .badge-inactive {
            background: #ff4444;
            color: white;
        }

        .links-list {
            display: grid;
            gap: 15px;
        }

        .link-item {
            padding: 15px;
            background: #0a0a0a;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .link-info {
            flex: 1;
        }

        .link-name {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .link-url {
            color: #888;
            font-size: 14px;
            word-break: break-all;
        }

        .no-links {
            text-align: center;
            color: #888;
            padding: 40px;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #888;
        }

        .error {
            text-align: center;
            padding: 40px;
            color: #ff4444;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Client Details</h1>
            <div>
                <a href="/admin" class="back-btn">← Back to Dashboard</a>
                <a href="/auth/logout" class="logout-btn">Logout</a>
            </div>
        </div>

        <div id="clientDetails">
            <div class="loading">Loading client details...</div>
        </div>
    </div>

    <script>
        async function loadClientDetails() {
            const clientId = window.location.pathname.split('/').pop();
            const container = document.getElementById('clientDetails');

            try {
                // Use the API endpoint explicitly to ensure JSON response
                const response = await fetch(`/admin/clients/${clientId}/api`, {
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    }
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();

                if (!data.success) {
                    container.innerHTML = `
                        <div class="error">
                            <h2>Error</h2>
                            <p>${data.message || 'Failed to load client details'}</p>
                        </div>
                    `;
                    return;
                }

                const client = data.client;
                const links = data.links || [];

                const isActive = client.subscriptionActive && 
                               new Date(client.subscriptionEndDate) > new Date();
                const endDate = client.subscriptionEndDate ? 
                               new Date(client.subscriptionEndDate).toLocaleDateString('en-IN') : 'N/A';
                const startDate = client.subscriptionStartDate ? 
                                 new Date(client.subscriptionStartDate).toLocaleDateString('en-IN') : 'N/A';
                const lastLogin = client.lastLogin ? 
                                 new Date(client.lastLogin).toLocaleDateString('en-IN') : 'Never';
                const createdAt = new Date(client.createdAt).toLocaleDateString('en-IN');

                let html = `
                    <div class="card">
                        <h2 class="card-title">Client Information</h2>
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">Name</div>
                                <div class="info-value">${client.name || 'N/A'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Email</div>
                                <div class="info-value">${client.email}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Business Name</div>
                                <div class="info-value">${client.businessName || 'Not set'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Phone Number</div>
                                <div class="info-value">${client.phoneNumber || 'Not set'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Address</div>
                                <div class="info-value">${client.address || 'Not set'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Unique Slug</div>
                                <div class="info-value">${client.uniqueSlug || 'N/A'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Payment Status</div>
                                <div class="info-value">
                                    <span class="badge ${client.paymentCompleted ? 'badge-active' : 'badge-inactive'}">
                                        ${client.paymentCompleted ? 'Paid' : 'Not Paid'}
                                    </span>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Account Activated</div>
                                <div class="info-value">
                                    <span class="badge ${client.accountActivated ? 'badge-active' : 'badge-inactive'}">
                                        ${client.accountActivated ? 'Yes' : 'No'}
                                    </span>
                                    ${!client.accountActivated && client.paymentCompleted ? `
                                        <button onclick="activateAccount('${client._id}')" style="margin-left: 10px; padding: 6px 12px; background: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">Activate Account</button>
                                    ` : ''}
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Subscription Status</div>
                                <div class="info-value">
                                    <span class="badge ${isActive ? 'badge-active' : 'badge-inactive'}">
                                        ${isActive ? 'Active' : 'Inactive'}
                                    </span>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Subscription Amount</div>
                                <div class="info-value">₹${client.subscriptionAmount || 0}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Subscription Start</div>
                                <div class="info-value">${startDate}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Subscription End</div>
                                <div class="info-value">${endDate}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Last Login</div>
                                <div class="info-value">${lastLogin}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Joined Date</div>
                                <div class="info-value">${createdAt}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Google ID</div>
                                <div class="info-value">${client.googleId || 'N/A'}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Has QR Code</div>
                                <div class="info-value">${client.qrCode ? 'Yes' : 'No'}</div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <h2 class="card-title">Links (${links.length})</h2>
                        ${links.length > 0 ? `
                            <div class="links-list">
                                ${links.map(link => `
                                    <div class="link-item">
                                        <div class="link-info">
                                            <div class="link-name">${link.displayName || link.category || 'Unnamed Link'}</div>
                                            <div class="link-url">${link.url}</div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        ` : `
                            <div class="no-links">No links created yet.</div>
                        `}
                    </div>
                `;

                container.innerHTML = html;
            } catch (error) {
                console.error('Error loading client details:', error);
                container.innerHTML = `
                    <div class="error">
                        <h2>Error</h2>
                        <p>Failed to load client details. Please try again.</p>
                    </div>
                `;
            }
        }

        async function activateAccount(clientId) {
            if (!confirm('Are you sure you want to activate this account? The client will be able to download their QR code after activation.')) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/clients/${clientId}/activate`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Account activated successfully!');
                    loadClientDetails();
                } else {
                    alert(data.message || 'Failed to activate account');
                }
            } catch (error) {
                console.error('Activation error:', error);
                alert('Error activating account. Please try again.');
            }
        }

        // Load client details on page load
        loadClientDetails();
    </script>

    <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #333; text-align: center; color: #666; font-size: 12px;">
        <div style="display: flex; align-items: center; justify-content: center; gap: 8px;">
            <span>Built by</span>
            <a href="https://aideveloperindia.store" target="_blank" style="display: flex; align-items: center; gap: 8px; text-decoration: none; color: #888;">
                <img src="/images/A-logo-transparent.png" alt="AI Developer India" style="height: 20px; width: auto;">
                <span>AI Developer India</span>
            </a>
        </div>
    </div>
</body>
</html>

